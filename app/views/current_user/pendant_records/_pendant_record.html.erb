<div class="card pendant_record">
  <%= image_tag pendant_record.photo.photo.url(:medium), class: 'card-img-top', data: { src: pendant_record.photo.photo.url(:medium) } %>
  <div class="card-block">
    <h4 class="card-title"><%= pendant_record.pendant.name %></h4>
    <h5 class="card-subtitle text-muted"><%= pendant_record.pendant.artist.name %></h5>
    <p class="card-text">
      <span class="created-at" title="<%= pendant_record.created_at %>">
        <%= time_ago_in_words(pendant_record.created_at) %>
      </span>
    </p>
  </div>
</div>
