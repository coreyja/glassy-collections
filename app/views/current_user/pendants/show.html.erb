<%= content_for :active_tab, :pendants %>

<div id="pendant">
  <h1><%= @pendant.name %></h1>
  <h2><%= @pendant.artist_name %></h2>

  <%= link_to 'Edit', edit_my_pendant_path(@pendant) %>

  <h4>Times Worn: <%= @pendant.pendant_records.count %></h4>

  <div class="pendant-records card-columns">
    <%= render partial: 'pendant_record', collection: @pendant.pendant_records.by_worn_on %>
  </div>
</div>
